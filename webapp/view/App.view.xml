<mvc:View
	controllerName="renumactionlistui.controller.App"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc">
	<l:VerticalLayout id="containerLayout" width="100%">
		<l:BlockLayout id="BlockLayout">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell
					id="Accent1"
					width="2"
					title="Renumber Activity ID in action list"
					backgroundColorSet="ColorSet10" 
					backgroundColorShade="ShadeE">
					<Text text="Download the action list as an CSV file from SharePoint and upload it here to renumber the Activity ID's. A new CSV file will be generated that can be used to create a new action list." />
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>

			<!-- New Block with FileUploader Component -->
			<l:BlockLayoutRow>
				<l:BlockLayoutCell
					id="FileUploaderCell"
					width="2">
					<u:FileUploader 
						id="fileUploader" 
						fileType="csv"
						placeholder="Choose action list CSV file..." 
						typeMissmatch="handleTypeMissmatch"
						width="40%"/>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>

			<!-- New Block with TextArea Component -->
			<l:BlockLayoutRow>
				<l:BlockLayoutCell
					id="TextAreaCell"
					width="2"
					title="Output Log">
					
					<!-- VBox to stack the TextArea and Button -->
					<VBox width="100%">
						<TextArea 
							id="myTextArea" 
							editable="false"
							rows="15" 
							width="40%" />

						<!-- Align OK button to the right -->
						<HBox justifyContent="End" width="40%">
							<Button 
								id="renumberButton"
								enabled="false"
								text="Renumber"
								press="onRenumberPress"/>
						</HBox>
					</VBox>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</l:VerticalLayout>
</mvc:View>
